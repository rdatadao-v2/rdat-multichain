{
  "name": "rdat-multichain",
  "version": "1.0.0",
  "description": "RDAT Omnichain Token using LayerZero V2 OFT",
  "main": "index.js",
  "scripts": {
    "compile": "pnpm hardhat compile",
    "test": "pnpm hardhat test",
    "deploy:vana": "pnpm hardhat deploy --network vana --tags RdatOFTAdapter",
    "deploy:base": "pnpm hardhat deploy --network base --tags RdatOFT",
    "wire": "pnpm hardhat lz:oapp:wire --oapp-config layerzero.config.ts",
    "verify": "pnpm hardhat verify",
    "verify-endpoint": "node scripts/verify-endpoint-simple.js",
    "bridge-test": "pnpm hardhat run scripts/bridge-test.ts --network vana",
    "clean": "pnpm hardhat clean && rm -rf cache artifacts node_modules"
  },
  "keywords": [
    "layerzero",
    "oft",
    "omnichain",
    "rdat"
  ],
  "author": "RDAT DAO",
  "license": "MIT",
  "devDependencies": {
    "@layerzerolabs/lz-evm-messagelib-v2": "^2.3.0",
    "@layerzerolabs/lz-evm-oapp-v2": "^2.3.0",
    "@layerzerolabs/lz-evm-protocol-v2": "^2.3.0",
    "@layerzerolabs/lz-evm-v1-0.7": "^2.3.0",
    "@layerzerolabs/lz-v2-utilities": "^2.3.0",
    "@layerzerolabs/toolbox-hardhat": "^0.3.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "chai": "^4.3.0",
    "dotenv": "^16.0.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.22.0",
    "hardhat-deploy": "^0.12.0",
    "hardhat-deploy-ethers": "^0.4.2",
    "hardhat-gas-reporter": "^1.0.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@layerzerolabs/lz-definitions": "^2.3.0"
  },
  "overrides": {
    "zksync-web3": "0.17.1"
  }
